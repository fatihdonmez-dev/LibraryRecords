@using LibraryRecords.Models.ViewModels;
@model CheckOutViewModel

<h1>Kitap Teslim Alma</h1>

<div>
    @* <h4>@Model.Title</h4> *@
    <hr />
    <form asp-action="CheckOut" asp-controller="Home" method="post">
        <input type="hidden" asp-for="BookId" />
        <div class="form-group">
            <label asp-for="Name">Ad</label>
            <input asp-for="Name" class="form-control" required />
        </div>
        <div class="form-group">
            <label asp-for="PhoneNumber">Cep Telefonu</label>
            <input asp-for="PhoneNumber" class="form-control" pattern="\d{2}-\d{4} \d{3}" placeholder="xx-xxxx xxx" required />
        </div>
        <div class="form-group">
            <label asp-for="TCKN">TCKN</label>
            <input asp-for="TCKN" class="form-control" pattern="\d{11}" required />
        </div>
        <div class="form-group">
            <label asp-for="CheckOutDate">Teslim Alma Tarihi</label>
            <input asp-for="CheckOutDate" class="form-control" readonly />
        </div>
        <div class="form-group">
            <label asp-for="DueDate">Teslim Etme Tarihi</label>
            <input asp-for="DueDate" class="form-control" readonly />
        </div>
        <button type="submit" class="btn btn-primary">Kitabı Teslim Al</button>
    </form>
</div>